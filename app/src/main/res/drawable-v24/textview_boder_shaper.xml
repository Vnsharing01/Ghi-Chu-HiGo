<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- đổ bóng xuống bottom và right -->
    <!-- bằng cách đẩy offset từ trên xuống và từ trái sang -->
    <item
        android:left="2dp"
        android:right="0dp"
        android:top="2dp"
        android:bottom="0dp">
        <shape
            android:shape="rectangle">
            <corners android:topLeftRadius="20dp"
                android:bottomRightRadius="20dp"/>
            <solid android:color="@android:color/darker_gray" />
        </shape>
    </item> <!-- item sau đè lên item trước -->
    <item
        android:left="0dp"
        android:right="2dp"
        android:top="0dp"
        android:bottom="3dp">
        <shape >
            <stroke
                android:color="@color/colorPrimary"
                android:width="2dp"/>
            <corners android:topLeftRadius="20dp"
                android:bottomRightRadius="20dp"/>
            <solid
                android:color="#FCF54C"/>

        </shape>
    </item>

</layer-list>
